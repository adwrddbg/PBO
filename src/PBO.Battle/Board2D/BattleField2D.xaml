<UserControl x:Class="LightStudio.PokemonBattle.PBO.Battle.BattleField2D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:my="clr-namespace:LightStudio.PokemonBattle.PBO.Battle"
             Height="192" Width="256" UseLayoutRounding="True" SnapsToDevicePixels="True" ClipToBounds="True">
    <Grid>
        <Image Source="/PBO.Battle;component/images/tempterrain.jpg" SnapsToDevicePixels="True" Width="256" Height="192"/>
        <my:RPokemon2D x:Name="rpm" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,14,8,0" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <my:OPokemon2D x:Name="opm" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,24,0,0" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
    </Grid>
</UserControl>
