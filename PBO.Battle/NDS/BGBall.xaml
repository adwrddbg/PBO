                                    <Pen Thickness="1.3" LineJoin="Round" Brush="Black"/>
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                    <DrawingBrush.Transform>
                        <TransformGroup>
                            <ScaleTransform CenterX="128" CenterY="0" ScaleX="{Binding ElementName=scale,Path=ScaleX}" ScaleY="{Binding ElementName=scale,Path=ScaleX}"/>
                            <TranslateTransform x:Name="downTrans"/>
                        </TransformGroup>
                    </DrawingBrush.Transform>
                </DrawingBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
    <UserControl.Resources>
        <Storyboard x:Key="Shine">
            <ColorAnimation Storyboard.TargetName="bg" Storyboard.TargetProperty="Color" To="#504848" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="upOuter" Storyboard.TargetProperty="Color" To="#900020" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="upInner" Storyboard.TargetProperty="Color" To="#b00028" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="downInner" Storyboard.TargetProperty="Color" To="#d8d8e0" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="downOuter" Storyboard.TargetProperty="Color" To="#c8c0e8" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="Light">
            <ColorAnimation Storyboard.TargetName="bg" Storyboard.TargetProperty="Color" To="#403030" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="upOuter" Storyboard.TargetProperty="Color" To="#900020" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="upInner" Storyboard.TargetProperty="Color" To="#b00028" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="downInner" Storyboard.TargetProperty="Color" To="#d8d8e0" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="downOuter" Storyboard.TargetProperty="Color" To="#c8c0e8" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="Dark">
            <ColorAnimation Storyboard.TargetName="bg" Storyboard.TargetProperty="Color" To="#181818" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="upOuter" Storyboard.TargetProperty="Color" To="#300810" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="upInner" Storyboard.TargetProperty="Color" To="#380810" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="downInner" Storyboard.TargetProperty="Color" To="#404040" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="downOuter" Storyboard.TargetProperty="Color" To="#383840" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="Blur">
            <DoubleAnimation Storyboard.TargetName="blur" Storyboard.TargetProperty="Radius" To="15" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="Sharp">
            <DoubleAnimation Storyboard.TargetName="blur" Storyboard.TargetProperty="Radius" To="0" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="Far">
            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="upTrans" Storyboard.TargetProperty="Y" To="0" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="downTrans" Storyboard.TargetProperty="Y" To="0" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="Near">
            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="3" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="upTrans" Storyboard.TargetProperty="Y" To="0" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="downTrans" Storyboard.TargetProperty="Y" To="0" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="Inner">
            <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="2.9" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="upTrans" Storyboard.TargetProperty="Y" To="-67" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="downTrans" Storyboard.TargetProperty="Y" To="35" Duration="0:0:0.3"/>
        </Storyboard>
    </UserControl.Resources>
</UserControl>
